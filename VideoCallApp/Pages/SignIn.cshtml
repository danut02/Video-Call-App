@page
@model VideoCallApp.Pages.SignInModel
@{
}
<form method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Sign in</legend>
        <label asp-for="theViewModel.FirstName">First name</label>
        <input asp-for="theViewModel.FirstName" type="text" size="50" />
        <br />
        <label asp-for="theViewModel.LastName">Last name</label>
        <input type="text" asp-for="theViewModel.LastName" size="50" />
        <br />
        <label asp-for="theViewModel.UserEmail">Email</label>
        <input type="email" asp-for="theViewModel.UserEmail" size="50" />
        <br />
        <label asp-for="theViewModel.Username">Username</label>
        <input type="text" asp-for="theViewModel.Username" size="50" />
        <br />
        <label asp-for="theViewModel.Password">Password</label>
        <input type="text" asp-for="theViewModel.Password" size="50" />
        <br />
        <label>The sex of the person</label>
        <br />
        <input type="radio" asp-for="theViewModel.Gender" value="Male" />
        <label asp-for="theViewModel.Gender">Male</label>
        <br />
        <input type="radio" asp-for="theViewModel.Gender" value="Female" />
        <label asp-for="theViewModel.Gender">Female</label>
        <br />
        <input type="file" asp-for="theViewModel.ProfileImageUrl"/>
        <br/>
        <input type="submit" value="Sign in" />
        <br />
    </fieldset>
</form>
